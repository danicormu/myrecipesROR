<%= render 'shared/errors', obj: @recipe %>

<%= render 'shared/errors', obj: @style %>

<div class="row">
    <div class="well col-md-8 col-md-offset-2">
        <% form_for @style do |f| %>
            <%= f.label :name %>
            <%= f.text_field :name %>
          
          
          <strong>Styles:</strong>
          <%= f.collection_check_boxes :style_ids, Style.all, :id, :name do |cb|%>
              <% cb.label(class: "checkbox-inline") {cb.check_box(class: "checkbox") + cb.text} %>
          <%end%>
          <br></br>
          
          <strong>Ingredients:</strong>
          <%= f.collection_check_boxes :style_ids, Ingredient.all, :id, :name do |cbi| %>
              <% cbi.label(class: "checkbox-inline") {cbi.check_box(class: "checkbox") + cbi.text} %>
          <%end%>
          <br></br>
          
            <%= f.submit 'Create Style', class: "btn btn-success") %>
        <% end %>
    </div>
</div>

<script type="text/javascript">
    $('#recipe_picture').bind('change', function() {
         size_in_megabytes = this.files[0].size/1024/1024;
         if(size_in_megabytes > 5){
             alert('This image is more than 5MB')
         }
    });
</script>